{ ViewData["Title"] = "GListaP"; }

<body>


    <header class="GuiaFondo">
        <div class="textos">
            <h1 class="titulo">Como ver el listado de pacientes</h1>
        </div>
        <div class="sesgoabajo"></div>
    </header>

    <h2 style="text-align:center; color:cornflowerblue">Paso 1</h2>

    <h2 style="text-align:center">Ingresar al menú principal y seleccionar la siguiente opción:</h2>
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="text-center">
                <img src="~/Imagenes/GListaP.jpg" alt="" width="800">
            </div>
        </div>
    </div>

    <h2 style="text-align:center; color:cornflowerblue">Paso 2</h2>

    <h2 style="text-align:center">Para buscar a un paciente en la lista realizar los pasos siguientes:</h2>
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="text-center">
                <img src="~/Imagenes/BuscarPaciente.jpg" alt="" width="800">
            </div>
        </div>
    </div>

    <h2 style="text-align:center"> 1) Seleccionar el Metodo de busqueda</h2>
    <h2 style="text-align:center"> 2) Ingresar la palabra clave para la busqueda, segun el metodo</h2>
    <h2 style="text-align:center"> 3) Presionar el botón "Buscar" </h2>
    <h2 style="text-align:center"> 4) Según la palabra clave se realizara la búsqueda</h2>


    <section class="cards contenedor">

        <div class="content-cards">


            <a asp-action="ManualGuia" class="btn btn-outline-dark btn-lg btn-block" role="button" style="color:cornflowerblue">Regresar</a>


        </div>
    </section>


</body>